<% provide(:title, 'home') %>
<% provide(:canonical, root_url) %>

<div class="row">
	<div class="col-lg-10 col-lg-offset-1 center home-cats">
		<% Category.all.each do |category| %>
			<% if category.gears.count > 10 %>
				<div class="home-cat">
					<%= link_to "#{category.name} (#{category.gears.count})", category %>
				</div>
			<% end %>
		<% end %>
		<hr>
	</div>
</div>


<div class="row">
	<div class="col-lg-8 col-lg-offset-1">
		<%= render partial: 'shared/post', collection: @posts %>

		<div class="center">
			<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
		</div>
		<br>
		<br>
	</div>

	<div class="col-lg-2">
		<%= render partial: 'shared/sidebar' %>
	</div>
</div>
