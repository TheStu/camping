        <td><%= gear.material %></td>
        <td><%= gear.upper_material %></td>
        <td><%= gear.deck_material %></td>
        <td><%= gear.frame_material %></td>
        <td><%= gear.heel_lift %></td>
        <td><%= gear.max_load %></td>
        <td><%= gear.canopy %></td>
        <td><%= gear.rainfly %></td>
        <td><%= gear.add_warmth %></td>
        <td><%= gear.non_stick %></td>
        <td><%= gear.blade_length %></td>
        <td><%= gear.multi_tool %></td>
        <td><%= gear.declination %></td>
        <td><%= gear.sighting_mirror %></td>
        <td><%= gear.global_needle %></td>
        <td><%= gear.red_light %></td>
        <td><%= gear.max_output %></td>
        <td><%= gear.max_distance %></td>
        <td><%= gear.max_battery %></td>
        <td><%= gear.rechargeable %></td>
        <td><%= gear.is_api_searchable %></td>
        <td><%= link_to 'Show', gear %></td>
        <td><%= link_to 'Edit', edit_gear_path(gear) %></td>
        <td><%= link_to 'Destroy', gear, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

