  <tbody>
    <% @gears.each do |gear| %>
      <tr>
        <td><%= gear.category_id %></td>
        <td><%= gear.name %></td>
        <td><%= gear.weight %></td>
        <td><%= gear.shape %></td>
        <td><%= gear.quilt %></td>
        <td><%= gear.min_temp %></td>
        <td><%= gear.hood %></td>
        <td><%= gear.insulation %></td>
        <td><%= gear.season %></td>
        <td><%= gear.gear_type %></td>
        <td><%= gear.capacity %></td>
