<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :content %><br>
    <%= f.bootsy_area :content, class: 'form-control', rows: 20 %>
  </div>

  <div class="row">
    <div class="col-lg-6">

      <div class="field form-group">
        <%= f.label :post_category_id %>
        <%= f.collection_select :post_category_id, PostCategory.all.order(:name), :id, :name, {}, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :large_image_url %><br>
        <%= f.text_field :large_image_url, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :meta_title %><br>
        <%= f.text_field :meta_title, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :thumb_image_url %><br>
        <%= f.text_field :thumb_image_url, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :meta_desc %><br>
        <%= f.text_field :meta_desc, class: 'form-control' %>
      </div>

    </div>
    <div class="col-lg-6">

      <div class="field form-group post-form-recommendations">
        <h5>Recommended Gear (3)</h5>
        <%= f.collection_check_boxes(:recommendation_ids, Recommendation.all, :id, :title, class: 'form-control') do |b| %>
          <%= b.label { b.check_box + b.text } %>
        <% end %>
      </div>

    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary btn-lg btn-block' %>
  </div>
  <br>
  <br>
  <br>
<% end %>
